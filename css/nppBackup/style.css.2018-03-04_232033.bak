@import url(reset.css);
body{
	color:#ffffff;
	font-size:30px;
}
.row:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.row { display: inline-block; }
/* start commented backslash hack \*/
* html .clearfix { height: 1%; }
.row { display: block; }
/* close commented backslash hack */
.header{
	background:#DC4AF1;
	height:200px;
	margin-bottom:10px;
}
.content{
	background:#DC4AF1;
	min-width:500px;
	width:70%;	
	float:left;
}
.sidebar{
	background:#DC4AF1;
	min-width:500px;
	width:30%;	
	float:left;
}
.footer{
	background:#DC4AF1;
	height:200px;
	margin-top:10px;
}