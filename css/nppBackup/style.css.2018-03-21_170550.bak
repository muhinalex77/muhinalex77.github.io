@import url(reset.css);
body{
	font-family:Arial, sans-serif;
}
.wrapper{
	max-width:1566px;
	min-width:980px;
	margin:0 auto;
	width:100%;
}
.clear:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.left{
	float:left;
}
.right{
	float:right
}
.clear { display: inline-block; }
/* start commented backslash hack \*/
* html .clear { height: 1%; }
.clear { display: block; }
/* close commented backslash hack */

h1{
	font-size:30px;
	font-weight:bold;

}
h2{
	font-size:24px;
}
h3{
	font-size:18px;
}
h4{
	font-size:16px;
}
h6{
	font-size:12px;
	font-weight:bold;
	color:#c656f7a;
}
p{
	font-size:14px;
}

.header{
	background:url(../images/footerBg.png)repeat-x;
}
.inner-header{
	width:980px;
	margin:0 auto;
	padding:0 10px;
}
.logo h1{
	color:#a5adb8;
	text-transform:uppercase;
}
.header h6{
	color:#656f7a;
}
.red-letter{
	color:#ae4b5d;
}
input[type="text"]{
	border:1px solid #875f66;
	border-radius:4px;
	height:31px;
	width:134px;
	margin-right:20px;
}