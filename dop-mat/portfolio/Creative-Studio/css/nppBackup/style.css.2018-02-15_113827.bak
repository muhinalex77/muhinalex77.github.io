@import url(reset.css);
body{
	background:#f4f4f4;
	font: 12px Arial, Tahoma, Verdana, sans-serif;
	color:#5d5d5d;
	min-width:960px;
}
.clear{
	clear:both;
}
a{
	color:#090909;
	text-decoration:none;
	font-weight:bold;
	text-transform:uppercase;
}
#topLine{
	background:#090909;
	height:16px;
}
#wrapper{
	outline:1px solid #000000;
	width:960px;
	margin:0 auto;	
}
#header{
	padding:20px 0 16px 0;
	border-bottom:1px solid #c0c0c0;
	overflow: hidden;
}
.aHome, a:hover{
	color:#F0FF7D;
}

.logo{
	width:183px;
	height:100px;
	float:left;
}
.menu{
	float:right;
	margin-top:40px;
	margin-right:5px;
	
}
.menu ul li{
	float:left;
	margin-left:63px;
}

#headerImage{
	height:380px;
	background:no-repeat url(../images/header-image.jpg);
	margin-top:20px;
	padding-bottom:20px;
	border-bottom:1px solid #c0c0c0;
	position:relative;
}
.imgBlackBox{
	text-transform:uppercase;
	font:bold 15px;
	color:#929191;
	width:442px;
	height:44px;
	background:#090909;
	position:absolute;
	bottom:65px;
	left:35px;
}
.imgBlackBox p{
	margin:15px 13px 14px 13px;
	line-height:1;
}
.imgBlackBox a{
	float:right;
}
.imgBlackBox a:hover{
	color:#fce900;
}