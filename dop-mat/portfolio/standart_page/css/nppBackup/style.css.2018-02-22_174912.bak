@import url(reset.css);

body{
	background:#282828;
	font:16px/1.3 Arial, Tahoma, Verdana, sans-serif;
	color:#333333;
}
#wrapper{
	width:1200px;
	margin:0 auto;
	max-width:1200px;
	min-width:960px;
}
#innerWrapper{
	width:1166px;
	margin:0 auto;
}
#header{
	
	background:url(../images/headerBg.png);
	
}
.clear{
	clear:both;
}
.left{
	width:50%;
	float:left;
	display:block;
}
.right{
	
	float:right;
	display:block;
}
h1{
	font: 60px Arial, Tahoma, Verdana, sans-serif;
	color:#ffffff;
	margin-bottom:30px;
}
h2{
	font:30px Arial, Tahoma, Verdana, sans-serif;
	padding-bottom:14px;
	color:#445161;
}
h3{
	font:24px Arial, Tahoma, Verdana, sans-serif;
	padding-bottom:14px;
	color:#445161;
}
.headerContent, .inner{
	padding:50px
}
.headerContent  ul li{
	color:#ffffff;
	margin-top:15px;
	font-size:20px;
}
.headerContent ul li{
	list-style:url(../images/chek.png);
	list-style-position:inside;
}
#information, #screenShots{
	
	background:#ffffff;
}
#contentAbout p{
	margin-top:20px;
}
.productP{
	width:443px;
	height:245px;
	background:#445161;
}
#advantage, #reviews{
	background:#f5f5f5;
}
.headers{
	text-align:center;
}
.width{
 	width:50%;
}
#advContent ul li{
	background:url(../images/plus.png) no-repeat 0 20px;
	padding-left:35px;
	padding-top:20px;
}
#contentScreen{
	overflow:hidden;
}
.ScrShCont{
	overflow:hidden;
	margin-bottom:20px;
}
#screenCont p{
	padding-right:10px;
}
#rightScrCont{
	margin-left:10px;
}
.productS{
	background:#445161;
	width:200px;
	height:150px;
	margin-right:15px;
}
.productCircle{
	margin-right:20px;
	background:#445161;
	width:70px;
	height:70px;
	border-radius:50px;
}
#reviews p{
	font-size:14px;
	font-style:italic;
	margin-bottom:10px;
	margin-top:10px;
	margin-right:10px;
	
}
#reviews p span{
	color:#989898;
	font-size:14px;
	
}
.reviewsCont{
	padding-left:30px;
	padding-right:10px;
	overflow:hidden;
	background:url(../images/articleBg.png) no-repeat;
}
.cont{
	padding-left:10px;
}
#buy{
	background:#ffffff;
}
#innerBuy{

}
#standart h3{
	text-align:center;
	margin-bottom:10px;
	padding-top:10px;
	color:#ffffff;
}
.buy{
	display:block;
	width:300px;
	border-radius:5px;
	background:#445161;	
	padding:15px auto;
}
.price{
	background:#ffffff;
	margin-left:2px;
	margin-right:3px;
}
