@import url(reset.css);

body{
	background:#282828;
	font:16px/1.3 Arial, Tahoma, Verdana, sans-serif;
	color:#333333;
}
#wrapper{
	width:1200px;
	margin:0 auto;
	max-width:1200px;
	min-width:960px;
}
#innerWrapper{
	width:1166px;
	margin:0 auto;
}
#header{
	
	background:url(../images/headerBg.png);
	
}
.clear{
	clear:both;
}
.left{
	width:50%;
	float:left;
	display:block;
}
.right{
	
	float:right;
	display:block;
}
h1{
	font: 60px Arial, Tahoma, Verdana, sans-serif;
	color:#ffffff;
	margin-bottom:30px;
}
h2{
	font:30px Arial, Tahoma, Verdana, sans-serif;
	padding-bottom:14px;
	color:#445161;
}
h3{
